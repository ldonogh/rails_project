<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
"http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<title>Rumsfeld Books</title>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
<link rel="stylesheet" type="text/css" href="style.css" />
</head>

<body>
	<%= render "header" %>
	<div id="wrapper">										
		<div id="content_inside">
			<div id="sidebar">	
				<ul id="list">
					<%= render "menu" %>
				</ul>
			</div>
			<div id="main">
				<div class="search">
					<p><%= render "search" %></p>
				</div>
				<div id="books">
					<%= field_set_tag do %>
					<label>Name:</label> <%= text_field_tag :name %><br/>
					<label>Email:</label> <%= email_field_tag :email %><br/>
					<label>Address:</label> <%= text_field_tag :address %><br/>
					<label>Province:</label> <%= select_tag :province_select, options_for_select(['AB', 'BC', 'MB', 'NB', 'NL', 'NT', 'NS', 'NU', 'ON', 'PE', 'QC', 'SK', 'YT']) %><br/>

					<%= submit_tag 'Submit Order' %>
					<% end %>
				</div>
			</div>
		</div>
	</div>

</body>
</html>
