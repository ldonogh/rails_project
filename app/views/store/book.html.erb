<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
"http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<title>Rumsfeld Books</title>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
<link rel="stylesheet" type="text/css" href="style.css" />
</head>

<body>
	<%= render "header" %>
	<div id="wrapper">										
		<div id="content_inside">
			<div id="sidebar">	
				<ul id="list">
					<%= render "menu" %>
				</ul>
			</div>
			<div id="main">
				<div class="search">
					<p><%= render "search" %></p>
				</div>
				<div id="books">
					<div id="book_page">
						<% unless @book.image_filename.blank? %>
							<%= image_tag(@book.image_filename) %><br />
						<% else %>
								<%= image_tag("no_image.jpg") %><br />
						<% end %>
				        <div class="description">
				            <h2><%= @book.title %></h2>
							<h3><%= @book.author %></h3>
							<p class="isbn">ISBN: <%= @book.isbn %></p>
				            <p class="desc_text"><%= @book.description %></p>
				            <h2 id="price"><%= number_to_currency(@book.price) %></h2>
				        </div>
					</div>
				</div>
			</div>
		</div>
	</div>

</body>
</html>
